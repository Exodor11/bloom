<div>
  <div class="title-post">
    <h1 style="margin: 0 10% 0 10%; font-size: 195%; font-weight: bold; margin-top: 15px;"><%=@post.title%></h1>
  </div>
  <hr>

  <div class="post-image">
    <img src="https://source.unsplash.com/random" class="img-responsive" style="width:100%; height: 300px; object-fit: cover;">
  </div>

<hr>
  <div style="margin: 0 10% 5% 10%; margin-bottom: 15px;" class="user">
    <img src="https://yt3.ggpht.com/a/AGF-l7-0J1G0Ue0mcZMw-99kMeVuBmRxiPjyvIYONg=s900-c-k-c0xffffffff-no-rj-mo" alt="user" />
    <h5 style="font-size: 14px;"><span><%=@post.user.first_name%> </span><span><%=@post.user.last_name%></span></h5>

    <div class="show-interaction">
    
      <div class="align-interactions">
              <% if @post.post_saved.find_by(user_id: current_user.id).present? %>
                <div class="align-upvote">
                  <a class="" data-method="delete" href="<%= post_unsave_path(@post) %>"><i class="fas fa-bookmark"></i></a>
                </div>
              <% else %>
                 <div class="align-upvote">
                  <a class="align-save" data-method="post" href="<%= post_save_path(@post) %>"><i class="far fa-bookmark"></i></a>
                </div>
              <% end %> 

              <div class="align-upvote">
                <i class="far fa-arrow-alt-circle-up"></i>
              </div>
        </div>
    </div>

  </div>

  <div style="margin: 0 10% 15px 10%; font-style: italic;" class="description-post">
    <small>Description</small>
  </div>

  <div class="text-post">
    <article><p style="margin: 0 10% 0 10%; font-size: 90%;"><%= @post.text %></p></article>
  </div>

  <div style="margin: 0 10% 0 10%; margin-top: 15px;" class="tags-post">
    <p>tags</p>
  </div>

</div>

<nav class="menu">
    <a href="" class="menu-item">
      <span class="material-icons"><i class="fab fa-laravel" style="font-size: 20px"></i></span>
      <span class="menu-item-label">Daily insights</span>
    </a>
    <a href="#" class="menu-item">
      <span class="material-icons"><i class="far fa-plus-square" style="font-size: 20px"></i></span>
      <span class="menu-item-label">Add post</span>
    </a>
    <a href="#" class="menu-item">
      <span class="material-icons"><i class="fas fa-search" style="font-size: 20px"></i></span>
      <span class="menu-item-label">Search</span>
    </a>
    <a href="#" class="menu-item">
      <span class="material-icons"><i class="fas fa-user-circle" style="font-size: 20px"></i></span>
      <span class="menu-item-label">Profile</span>
    </a>
  </nav>
