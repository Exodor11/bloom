<h1 style="text-align: center;">Daily Insights</h1>


<div class="container">
  <% @posts.each do |post| %>
    <div class="card">
        <div class="card-header">
          <a href="<%= post_path(post.id)%>">
            <% if post.photo.attached? %>
              <img src="<%= cl_image_path post.photo.key, height: 300, crop: :fill %>" alt="rover" />
            <% end %>
          </a>
        </div>

        <div class="tags">
          <% post.tags.each do |tag| %>
            <span class="tag tag-color-test"><%= tag.name %></span>
          <% end %>
        </div>

        <div class="card-body">
          <a href="<%= post_path(post.id)%>">
            <h4 class="card-title"><%= post.title %></h4>
          </a>
          <p><%= post.text %> </p>
          <div class="user">
            <% if post.user.photo.attached? %>
              <img src="<%= cl_image_path post.user.photo.key, height: 300, crop: :fill %>" alt="user" />
            <% end %>
            <h5 style="font-size: 14px;"> <%= post.user.first_name %></h5>

          </div>
        </div>
    </div>
  <% end %>
</div>
