<div class="container">
  <h2 style="padding-bottom: 5px; padding-top: 10px; ">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'new-searchbar' } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: 'new-searchbar' } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions btn btn-search mb-2">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
