<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'new-searchbar' }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>

      <%= f.input :first_name, placeholder: "Your first name", label: "First name (max. 20 characters)", input_html: { maxlength: 20, class: 'new-searchbar' } %>
      <%= f.input :last_name, placeholder: "Your last name", label: "Last name (max. 20 characters)", input_html: { maxlength: 20, class: 'new-searchbar' } %>
      <%= f.input :photo, as: :file %>

      <%= f.rich_text_area :bio_action_text, placeholder: "Tell people about yourself", label: "Enter your bio here (max. 500 characters)", input_html: { maxlength, class: 'new-searchbar': 500 } %>
      <%= f.rich_text_area :contact_action_text, placeholder: "Your contact info", label: "Where do you want to be contacted? (max. 400 characters)", input_html: { maxlength: 400, class: 'new-searchbar' } %>

      <%= f.association :tags,
                  as: :check_boxes,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
    </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
